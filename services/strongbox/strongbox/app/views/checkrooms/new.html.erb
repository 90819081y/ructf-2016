<% provide(:title, 'New checkroom') %>

<div class="row">
  <div class="col-md-12">
    <h1>New checkroom</h1>
    <%= form_for(@checkroom) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Name checkroom", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, placeholder: "Description", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :secret, placeholder: "Secret", class: "form-control" %>
        </div>
        <%= f.submit "Add", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

